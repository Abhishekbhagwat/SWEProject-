<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/gallery_category_constraint_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/gallery_category_activity_gallery_category_constraint_layout_background_color">

	<LinearLayout
		android:id="@+id/southspinecategory_button"
		android:layout_width="@dimen/gallery_category_activity_southspinecategory_button_width"
		android:layout_height="@dimen/gallery_category_activity_southspinecategory_button_height"
		android:layout_marginTop="@dimen/gallery_category_activity_southspinecategory_button_margin_top"
		android:background="?attr/selectableItemBackground"
		android:gravity="center"
		android:orientation="vertical"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/northspinecategory_button"
		tools:layout_editor_absoluteX="25dp"
		tools:layout_editor_absoluteY="325dp"
		style="@style/Widget.AppCompat.Button">
	
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/bitmap_3"/>
	
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/gallery_category_activity_southspinecategory_button_image_padding"
			android:fontFamily="@font/font_avenir_medium"
			android:gravity="start"
			android:text="@string/gallery_category_activity_southspinecategory_button_text"
			android:textColor="@color/gallery_category_activity_southspinecategory_button_text_color"
			android:textSize="@dimen/gallery_category_activity_southspinecategory_button_text_size"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/northspinecategory_button"
		android:layout_width="@dimen/gallery_category_activity_northspinecategory_button_width"
		android:layout_height="@dimen/gallery_category_activity_northspinecategory_button_height"
		android:layout_marginTop="@dimen/gallery_category_activity_northspinecategory_button_margin_top"
		android:background="?attr/selectableItemBackground"
		android:gravity="center"
		android:orientation="vertical"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/browsecategory_constraint_layout"
		tools:layout_editor_absoluteX="24dp"
		tools:layout_editor_absoluteY="75dp"
		style="@style/Widget.AppCompat.Button">
	
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/bitmap"/>
	
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/gallery_category_activity_northspinecategory_button_image_padding"
			android:fontFamily="@font/font_avenir_medium"
			android:gravity="start"
			android:text="@string/gallery_category_activity_northspinecategory_button_text"
			android:textColor="@color/gallery_category_activity_northspinecategory_button_text_color"
			android:textSize="@dimen/gallery_category_activity_northspinecategory_button_text_size"/>
	</LinearLayout>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/browsecategory_constraint_layout"
		android:layout_width="@dimen/gallery_category_activity_browsecategory_constraint_layout_width"
		android:layout_height="@dimen/gallery_category_activity_browsecategory_constraint_layout_height"
		android:layout_marginTop="@dimen/gallery_category_activity_browsecategory_constraint_layout_margin_top"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="25dp"
		tools:layout_editor_absoluteY="21dp">

		<ImageView
			android:id="@+id/cart_image_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="center"
			android:src="@drawable/ic_baseline_local_grocery_store_24px"
			android:tint="@color/cart_activity_cart_text_view_text_color"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
	
		<TextView
			android:id="@+id/browse_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/font_avenir_medium"
			android:gravity="center"
			android:text="@string/gallery_category_activity_browse_text_view_text"
			android:textColor="@color/gallery_category_activity_browse_text_view_text_color"
			android:textSize="@dimen/gallery_category_activity_browse_text_view_text_size"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="130dp"
			tools:layout_editor_absoluteY="0dp"/>
	
		<ImageButton
			android:id="@+id/header_menu_dark_button"
			android:layout_width="@dimen/gallery_category_activity_header_menu_dark_button_width"
			android:layout_height="@dimen/gallery_category_activity_header_menu_dark_button_height"
			android:background="?attr/selectableItemBackground"
			android:src="@drawable/header_menu_dark"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="0dp"
			tools:layout_editor_absoluteY="4dp"/>
	</android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>